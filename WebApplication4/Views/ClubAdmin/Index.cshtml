@{
    Layout = "~/Views/Shared/_ClubAdminLayout.cshtml";
    ViewBag.Title = "Club Admin Dashboard";
}

<style>
    /* Glassmorphism Card */
    .profile-card {
        background: rgba(255, 255, 255, 0.9);
        border-radius: 20px;
        padding: 30px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease-in-out;
    }

        .profile-card:hover {
            transform: scale(1.02);
        }

    /* Profile Image */
    .profile-img {
        width: 180px;
        height: 180px;
        border-radius: 50%;
        object-fit: cover;
        border: 5px solid rgba(0, 0, 0, 0.1);
        transition: 0.3s;
    }

        .profile-img:hover {
            transform: rotate(5deg) scale(1.05);
        }

    /* Details */
    .details-list {
        list-style: none;
        padding: 0;
        font-size: 18px;
        color: #333; /* Dark color for better contrast */
    }

        .details-list li {
            margin-bottom: 12px;
            padding: 10px;
            border-radius: 10px;
            background: rgba(0, 0, 0, 0.05);
            transition: 0.3s;
        }

            .details-list li:hover {
                background: rgba(0, 0, 0, 0.1);
            }

    /* Request Event Button */
    .btn-custom {
        background: linear-gradient(135deg, #007bff, #6610f2);
        border: none;
        padding: 12px 20px;
        font-size: 18px;
        color: white;
        border-radius: 50px;
        transition: 0.3s;
    }

        .btn-custom:hover {
            background: linear-gradient(135deg, #6610f2, #007bff);
            transform: scale(1.05);
        }
</style>

<div class="container mt-5">
    <div class="d-flex justify-content-center">
        <div class="profile-card text-center">
            <h2 class="text-dark mb-4">Welcome, @ViewBag.ClubAdminName! 🎉</h2>

            <div class="row align-items-center">
                <!-- Profile Image -->
                <div class="col-md-4 text-center">
                    @if (!string.IsNullOrEmpty(ViewBag.ClubAdminPhoto))
                    {
                        <img src="@Url.Content(ViewBag.ClubAdminPhoto)" alt="Profile Picture" class="profile-img">
                    }
                    else
                    {
                        <i class="fas fa-user-circle text-secondary" style="font-size: 180px;"></i>
                        <p class="text-muted mt-2"><strong>No Profile Photo Uploaded</strong></p>
                    }
                </div>

                <!-- Club Admin Details -->
                <div class="col-md-8">
                    <ul class="details-list">
                        <li><strong>📌 Club Name:</strong> @ViewBag.ClubName</li>
                        <li><strong>🏛 Department:</strong> @ViewBag.Department</li>
                        <li><strong>🎓 University:</strong> @ViewBag.University</li>
                    </ul>

                </div>
            </div>
        </div>
    </div>

    <!-- ✅ Notifications Section -->
    <div class="mt-3 text-center">
        <div class="dropdown">
            <button class="btn btn-secondary dropdown-toggle" type="button" id="notificationDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                🔔 Notifications
                @{
                    var notifications = ViewBag.Notifications as List<WebApplication4.Models.Notification>;
                    if (notifications != null && notifications.Count > 0)
                    {
                        <span class="badge bg-danger">@notifications.Count</span>
                    }
                }
            </button>

            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="notificationDropdown">
                @{
                    if (notifications != null && notifications.Count > 0)
                    {
                        foreach (var notification in notifications)
                        {
                            <li>
                                <a class="dropdown-item d-flex justify-content-between align-items-center"
                                   href="@Url.Action("MarkNotificationAsRead", "ClubAdmin", new { notificationId = notification.NotificationID })">
                                    <span>@notification.Message</span>
                                   @* <small class="text-muted ms-2">@notification.StartDate?.ToString("MMM dd, yyyy")</small>*@
                                </a>
                            </li>
                        }

                    }
                    else
                    {
                        <li><span class="dropdown-item text-center">No new notifications</span></li>
                    }
                }
            </ul>
        </div>
    </div>

</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

