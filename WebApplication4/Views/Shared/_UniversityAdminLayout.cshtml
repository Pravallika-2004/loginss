@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - University Administrator Dashboard</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />

    <style>
        .sidebar {
            width: 250px;
            height: 100vh;
            position: fixed;
            left: 0;
            top: 0;
            background: #343a40;
            padding: 20px;
            overflow-y: auto;
        }

            .sidebar a {
                display: block;
                color: white;
                padding: 10px;
                text-decoration: none;
                border-radius: 5px;
                transition: 0.3s;
            }

                .sidebar a:hover {
                    background: #495057;
                }

            .sidebar .collapse {
                padding-left: 15px;
            }

            .sidebar .nested-collapse {
                padding-left: 30px;
            }

        .content {
            margin-left: 260px;
            padding: 20px;
            width: calc(100% - 260px);
        }
    </style>
</head>
<body>

    <!-- Header -->
    <div class="header bg-primary text-white text-center py-3">
        <h2>University Administrator Dashboard</h2>
    </div>

    <div class="d-flex">
        <!-- Sidebar -->
        <div class="sidebar bg-dark text-white">
            <!-- Dashboard -->
            <a href="@Url.Action("Index", "UniversityAdmin")"><i class="fas fa-tachometer-alt"></i> Dashboard</a>

            <!-- Schools Section -->
            <a href="#schoolsSubmenu" data-toggle="collapse">
                <i class="fas fa-school"></i> Schools <i class="fas fa-caret-down float-right"></i>
            </a>
            <div id="schoolsSubmenu" class="collapse">
                <a href="@Url.Action("AddDepartment", "UniversityAdmin")" class="nested-collapse"><i class="fas fa-plus"></i> Add School</a>
                <a href="@Url.Action("ManageDepartments", "UniversityAdmin")" class="nested-collapse"><i class="fas fa-cogs"></i> Manage Schools</a>
                <a href="@Url.Action("ViewSchools", "UniversityAdmin")" class="nested-collapse"><i class="fas fa-eye"></i> View Schools</a>
                <a href="@Url.Action("StatisticsSchools", "UniversityAdmin")" class="nested-collapse"><i class="fas fa-chart-bar"></i> School Statistics</a>
            </div>

            <!-- Mentors Section -->
            <a href="#mentorsSubmenu" data-toggle="collapse">
                <i class="fas fa-user-tie"></i> Mentors <i class="fas fa-caret-down float-right"></i>
            </a>
            <div id="mentorsSubmenu" class="collapse">
                <a href="@Url.Action("AddMentor", "UniversityAdmin")" class="nested-collapse"><i class="fas fa-user-plus"></i> Add Mentor</a>
                <a href="@Url.Action("ManageMentors", "UniversityAdmin")" class="nested-collapse"><i class="fas fa-users-cog"></i> Manage Mentors</a>
                <a href="@Url.Action("ViewMentors", "UniversityAdmin")" class="nested-collapse"><i class="fas fa-eye"></i> View Mentors</a>
                <a href="@Url.Action("StatisticsMentors", "UniversityAdmin")" class="nested-collapse"><i class="fas fa-chart-bar"></i> Mentor Statistics</a>
            </div>

            <!-- Students Section -->
            <a href="#studentsSubmenu" data-toggle="collapse">
                <i class="fas fa-user-graduate"></i> Students <i class="fas fa-caret-down float-right"></i>
            </a>
            <div id="studentsSubmenu" class="collapse">
                <a href="@Url.Action("AddStudent", "UniversityAdmin")" class="nested-collapse"><i class="fas fa-user-plus"></i> Add Student</a>
                <a href="@Url.Action("ManageStudents", "UniversityAdmin")" class="nested-collapse"><i class="fas fa-users"></i> Manage Students</a>
                <a href="@Url.Action("ViewStudents", "UniversityAdmin")" class="nested-collapse"><i class="fas fa-eye"></i> View Students</a>
                <a href="@Url.Action("StatisticsStudents", "UniversityAdmin")" class="nested-collapse"><i class="fas fa-chart-bar"></i> Student Statistics</a>
            </div>

            <!-- Logout -->
            <a href="@Url.Action("Logout", "Admin")" class="btn btn-danger mt-3"><i class="fas fa-sign-out-alt"></i> Logout</a>
        </div>

        <!-- Main Content -->
        <div class="content">
            @RenderBody()
        </div>
    </div>

    <!-- Bootstrap JS (for sidebar collapse) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>

</body>
</html>
