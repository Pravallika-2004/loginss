@model List<WebApplication4.Models.UNIVERSITY>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Quick Stats - All Universities";
}

<!-- Font Awesome CDN -->
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet" />

<style>
    .container {
        max-width: 1400px; /* Increased width for the container */
    }

    .university-list {
        display: grid;
        grid-template-columns: repeat(3, 1fr); /* Three columns per row */
        gap: 2rem;
        padding: 1.5rem;
    }

    .university-block {
        display: flex;
        align-items: center;
        background: linear-gradient(135deg, #ffffff, #f8f9fa);
        padding: 1.3rem;
        border-radius: 20px;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.15);
        transform: translateY(50px);
        opacity: 0;
        animation: revealUp 0.6s ease-out forwards;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .university-block:hover {
        transform: translateY(-5px);
        box-shadow: 0 12px 24px rgba(0, 0, 0, 0.2);
    }

    .icon-block {
        font-size: 2.5rem;
        color: #007bff;
        margin-right: 1.5rem;
        transition: color 0.3s ease;
    }

    .university-block:hover .icon-block {
        color: #0056b3;
    }

    .info-block h4 {
        margin: 0;
        font-weight: 700;
        font-size: 1.2rem;
        color: #333;
    }

    .info-block p {
        margin: 0.5rem 0;
        color: #666;
        font-size: 0.9rem;
    }

    .info-block .btn {
        margin-top: 0.75rem;
        border-radius: 25px;
        padding: 0.35rem 1rem;
        font-size: 0.85rem;
        transition: background-color 0.3s ease, color 0.3s ease;
    }

    .info-block .btn:hover {
        background-color: #007bff;
        color: #fff;
    }

    @@keyframes revealUp {
        to {
            transform: translateY(0);
            opacity: 1;
        }
    }

    /* Responsive adjustments */
    @@media (max-width: 992px) {
        .container {
            max-width: 960px;
        }

        .university-list {
            grid-template-columns: repeat(2, 1fr); /* Two columns on medium screens */
            gap: 1.5rem;
            padding: 1.2rem;
        }

        .university-block {
            padding: 1.2rem;
        }

        .icon-block {
            font-size: 2.2rem;
            margin-right: 1.2rem;
        }
    }

    @@media (max-width: 576px) {
        .container {
            max-width: 100%;
        }

        .university-list {
            grid-template-columns: 1fr; /* Single column on small screens */
            gap: 1rem;
        }

        .info-block h4 {
            font-size: 1.1rem;
        }

        .info-block p {
            font-size: 0.85rem;
        }

        .info-block .btn {
            font-size: 0.8rem;
            padding: 0.3rem 0.9rem;
        }
    }
</style>

<div class="container mt-5">
    <h2 class="text-center mb-5" style="font-weight: 700; color: #333;">🎓 All Universities</h2>

    <div class="university-list">
        @for (int i = 0; i < Model.Count; i++)
        {
            var university = Model[i];
            var delay = i * 0.2; // Staggered animation delay

            <div class="university-block" style="animation-delay: @($"{delay}s");">
                <div class="icon-block">
                    <i class="fas fa-university"></i>
                </div>
                <div class="info-block">
                    <h4>@university.UniversityNAME</h4>
                    <p>@university.Location</p>
                    <a href="@Url.Action("GetDepartments", "Admin", new { universityId = university.UniversityID })"
                       class="btn btn-outline-primary btn-sm">
                        View Departments
                    </a>
                </div>
            </div>
        }
    </div>
</div>