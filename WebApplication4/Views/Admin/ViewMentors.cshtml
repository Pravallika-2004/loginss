@model List<WebApplication4.Models.USER>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "View Mentors";
}

<h2 class="text-center mb-4">@ViewBag.Title</h2>

<!-- ✅ Success Message -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success text-center">@TempData["SuccessMessage"]</div>
}

<!-- ✅ Buttons to switch views -->
<div class="text-center mt-3">
    <a href="@Url.Action("ViewMentors", "Admin")" class="btn btn-primary">View All Mentors</a>
    <a href="@Url.Action("ViewActiveMentors", "Admin")" class="btn btn-success">View Active Mentors</a>
    <a href="@Url.Action("ViewDeactivatedMentors", "Admin")" class="btn btn-danger">View Deactivated Mentors</a>
</div>

<!-- ✅ Mentors Table -->
<table class="table table-bordered table-striped">
    <thead class="thead-dark">
        <tr>
            <th>Mentor Name</th>
            <th>Email</th>
            <th>Mobile</th>
            <th>Status</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var mentor in Model)
        {
            <tr>
                <td>@mentor.FirstName @mentor.LastName</td>
                <td>@mentor.Email</td>
                <td>@mentor.MobileNumber</td>
                <td>
                    @if (mentor.IsActive == true)
                    {
                        <span class="badge badge-success">Active</span>
                    }
                    else
                    {
                        <span class="badge badge-danger">Inactive</span>
                    }
                </td>

            </tr>
        }
    </tbody>
</table>


<!-- ✅ CSS Styling -->
<style>
    .table {
        width: 100%;
        background-color: #fff;
        border-radius: 5px;
        overflow: hidden;
    }

        .table th {
            text-align: center;
            background-color: #343a40;
            color: white;
            padding: 12px;
        }

        .table td {
            text-align: left;
            padding: 10px;
        }

    .alert-success {
        font-size: 16px;
        font-weight: bold;
        color: green;
        text-align: center;
    }

    .btn {
        margin: 5px;
    }
</style>

<div class="pagination-container">
    <div class="pagination-info mb-2">
        Showing @ViewBag.FirstItemOnPage to @ViewBag.LastItemOnPage of @ViewBag.TotalItemCount entries
    </div>

    <ul class="pagination">
        @{
            int currentPage = ViewBag.CurrentPage;
            int totalPages = ViewBag.TotalPages;
            int maxPagesToShow = 5;

            int startPage = Math.Max(1, currentPage - maxPagesToShow / 2);
            int endPage = Math.Min(totalPages, startPage + maxPagesToShow - 1);

            if ((endPage - startPage) < maxPagesToShow - 1)
            {
                startPage = Math.Max(1, endPage - maxPagesToShow + 1);
            }

            for (int i = startPage; i <= endPage; i++)
            {
                <li class="page-item @(i == currentPage ? "active" : "")">
                    <a class="page-link" href="@Url.Action(ViewBag.ViewType, new { page = i })">@i</a>
                </li>
            }
        }
    </ul>
</div>

<style>
    .pagination-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-top: 20px;
    }

    .pagination-info {
        font-size: 14px;
        color: #6c757d;
        margin-bottom: 10px;
    }

    .pagination {
        display: flex;
        list-style: none;
        padding: 0;
        gap: 6px;
        margin: 0;
    }

    .page-item {
        display: flex;
    }

    .page-link {
        display: block;
        padding: 8px 14px;
        border-radius: 50%;
        background-color: #e0e0e0;
        color: #333;
        text-decoration: none;
        font-weight: bold;
        transition: background-color 0.2s ease;
    }

        .page-link:hover {
            background-color: #d0d0d0;
        }

    .page-item.active .page-link {
        background-color: #007bff;
        color: white;
    }
</style>
